<idea-plugin>
  <version>1.0-SNAPSHOT</version>
  <idea-version since-build="241" until-build="251.*" />
  <id>com.example.line-comment</id>
  <name>Line Comment</name>
  <vendor>Your Name</vendor>
  <description>Add comments to specific code lines with icons</description>
  <depends>com.intellij.modules.platform</depends>
  <extensions defaultExtensionNs="com.intellij">
    <gutterIconRenderer implementation="com.example.linecomment.LineCommentGutterIconRenderer" />
    <projectService serviceImplementation="com.example.linecomment.LineCommentService" />
    <projectService serviceImplementation="com.example.linecomment.CommentArchiveService" />
    <postStartupActivity implementation="com.example.linecomment.LineCommentStartupActivity" />
  </extensions>
  <actions>
    <action id="LineComment.AddComment" class="com.example.linecomment.AddLineCommentAction" text="Add Line Comment" description="Add a comment to the current line">
      <add-to-group group-id="EditorPopupMenu" anchor="first" />
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" />
    </action>
  </actions>
</idea-plugin>
