<idea-plugin>
  <version>0.1.0</version>
  <id>com.yuunus90.line-comment</id>
  <name>Line Comment</name>
  <vendor>yuunus90</vendor>
  <description>Add comments to specific code lines with icons<![CDATA[Add comments to specific code lines with icons]]></description>
  <idea-version since-build="251" until-build="251.*" />
  <depends>com.intellij.modules.platform</depends>
  <extensions defaultExtensionNs="com.intellij">
    <gutterIconRenderer implementation="com.yuunus90.linecomment.LineCommentGutterIconRenderer" />
    <projectService serviceImplementation="com.yuunus90.linecomment.LineCommentService" />
    <projectService serviceImplementation="com.yuunus90.linecomment.CommentArchiveService" />
    <postStartupActivity implementation="com.yuunus90.linecomment.LineCommentStartupActivity" />
  </extensions>
  <actions>
    <action id="LineComment.AddComment" class="com.yuunus90.linecomment.AddLineCommentAction" text="Add Line Comment" description="Açıklama satırı ekle" icon="/icons/comment.svg">
      <add-to-group group-id="EditorPopupMenu" anchor="first" />
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" />
    </action>
  </actions>
  <projectListeners>
    <listener class="com.yuunus90.linecomment.LineCommentFileEditorListener" topic="com.intellij.openapi.fileEditor.FileEditorManagerListener" />
  </projectListeners>
  <searchableOptions>
    <option name="LineComment.AddComment" text="Add Line Comment" description="Açıklama satırı ekle" />
  </searchableOptions>
</idea-plugin>
